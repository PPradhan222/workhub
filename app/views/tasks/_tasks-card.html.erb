<div id="<%= status %>-tasks">
  <% current_user.tasks.where(status: status).each do |task| %>
    <div class="card mb-3 bg-light cursor-grab border" id="task-<%= task.id %>">
      <div class="card-body p-3">
        <div class="float-right">
          <%= render partial: 'tasks/task-status-dropdown', locals: { task: task } %>
        </div>
        <small><%= created_time_ago(task) %></small>
        <p><%= task.name %></p>
        <div class="float-right mt-n1">
          <h6><%= task.group.name %></h6>
          <small><%= assigned_user(task)%></small>
        </div>
        <a href="#" class="btn btn-primary btn-sm" data-target="#show-task-modal-<%= task.id %>" data-toggle="modal">View</a>
      </div>
    </div>
    <%= render partial: 'tasks/show', locals: { task: task } %>
  <% end %>
</div>
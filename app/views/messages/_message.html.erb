<div class="chat-message-container">
  <div class="row no-gutters">
    <div class="col">
      <div class="message-content">
        <div class="text-right">
          <small>
            <%= message.user.name %>
          </small>
        </div>
        <p class="mb-1">
          <%= message.body %>
        </p>
        <div class="text-right">
          <small>
            <%= message.created_at %>
          </small>
        </div>
      </div>
    </div>
  </div>
</div>

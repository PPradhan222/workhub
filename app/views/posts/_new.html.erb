<div>
  <%= form_with model: Post.new, local: true do |form| %>
    <%= hidden_field_tag 'post[group_id]', @group.id %>

    <div class="form-group">
      <%= form.text_area :body, placeholder: 'Go ahead.....', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.file_field :images, multiple: true, class: 'form-control-file' %>
    </div>

    <div class="actions">
      <%= form.submit "Post", class: 'btn btn-primary', id: 'post_submit' %>
    </div>
  <% end %>
</div>


<script type="text/javascript">
  var body = $('#post_body').val();
  var images = $('#post_images').val();

  $('#post_submit').click(function() {
    if(body.length === 0 && images.length === 0) {
      alert('your post cannot be empty');
      return false;
    }else{
      return true;
    }
  });
</script>
